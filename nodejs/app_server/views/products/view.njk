{% extends "../index.njk" %}

{% block main_content %}
<div class="product row">
<div class="col-xs-3 col-md-3">
    <img src="{{product.image}}" />
</div>
<div class="col-xs-9 col-md-9">
    <h1>{{ product.title }}</h1>
    <div class="description small">{{product.description}}</div>
    <span class="price">${{product.price}}</span>
</div>
{% endblock %}